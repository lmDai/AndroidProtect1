<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="大数据安全预警平台"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/bg_login_input_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.cqyanyu.backing.ui.widget.app.ClearableEditText
                        android:id="@+id/et_username"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/common_list"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@mipmap/ic_zhanghao"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical|start"
                        android:hint="请输入账号"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/color_hint"
                        android:textSize="@dimen/text_size_14" />

                    <ImageView
                        android:id="@+id/muti"
                        android:layout_width="@dimen/common_list"
                        android:layout_height="@dimen/common_list"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="3dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_down_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <com.cqyanyu.backing.ui.widget.app.ClearableEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_list"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ic_mima"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical|start"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/color_hint"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_item"
                android:layout_margin="@dimen/common_margin"
                android:background="@drawable/bg_btn_login"
                android:gravity="center"
                android:text="@string/text_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin">

                <CheckBox
                    android:id="@+id/cb_remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/icon_login"
                    android:text="@string/text_remember_password"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:clickable="true"
                    android:maxLines="1"
                    android:text="@string/text_forget_password"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>