<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_white_radius_solid_five"
        android:orientation="vertical">

        <com.cqyanyu.backing.ui.widget.app.XTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item"
            android:drawableLeft="@mipmap/jiantou_lanse"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="温感"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item"
            android:drawableLeft="@mipmap/ic_dizhi"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="位置"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item"
            android:drawableLeft="@mipmap/ic_shijian"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="时间"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <com.cqyanyu.backing.ui.widget.app.XTextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item"
            android:drawableLeft="@mipmap/jiantou_lanse"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="温感"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_14" />

        <View
            android:id="@+id/view_subtitle"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item"
            android:drawableLeft="@mipmap/ic_fashengcishu"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="发生次数  10"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

</LinearLayout>