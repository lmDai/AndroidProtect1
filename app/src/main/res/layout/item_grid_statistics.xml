<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/bg_white_radius_solid_five"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/bg_white_radius_solid_five"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:gravity="center"
                android:text="@string/text_unit_name"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_size_14" />

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:id="@+id/tv_unit_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"

                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_36">

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_set_position"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_size_14" />

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:id="@+id/tv_unit_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_4"

                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:gravity="center"
                android:text="单位类型："
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_size_14" />

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:id="@+id/tv_unit_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"

                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:id="@+id/XTextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:gravity="center|start"
                android:text="@string/text_regulatory_level" />

            <com.cqyanyu.backing.ui.widget.app.XTextView
                android:id="@+id/tv_unit_level"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_weight="1"
                android:gravity="start|center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/common_margin"
                android:gravity="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>